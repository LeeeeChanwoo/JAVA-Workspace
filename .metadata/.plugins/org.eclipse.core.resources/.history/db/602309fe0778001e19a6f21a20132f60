package com.kh.first; // 패키지 선언부

import java.math.BigInteger;
import java.util.Scanner;

public class Main {
	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		int T = sc.nextInt();
		for (int t = 0; t < T; t++) {
		int R= sc.nextInt();
		 sc.nextLine();
		String S= sc.next();
		String P = "";


	    for (int i = 0; i <S.length(); i++) {
	    	for(int j=0; j<R;j++) {
	    		P+=S.charAt(i);
	    	}
	    }
	
	System.out.println(P);
		}
}
}