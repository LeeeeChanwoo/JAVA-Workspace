package com.kh.first; // 패키지 선언부

import java.math.BigInteger;
import java.util.Scanner;

public class Main {
	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		int R= sc.nextInt();
		 sc.nextLine();
		String S= sc.nextLine();
		String P = null;


	    for (int i = 0; i <S.length(); i++) {
	    	for(int j=0; j<R;j++) {
	    		P+=S.charAt(i);
	    	}
	    }
	
	System.out.print(P);
}
}